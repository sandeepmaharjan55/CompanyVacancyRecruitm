@model IEnumerable<FirstTask_Project.Models.Company>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2>Index</h2>
@using (Html.BeginForm("Index", "Companies", FormMethod.Get))
{
    <b>Search By:</b>@Html.RadioButton("searchBy", "ContactPerson")<text>ContactPerson</text>
    @Html.RadioButton("searchBy", "Company")<text>Company</text>
   <br />
    @Html.TextBox("search")<input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phoneno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacebookURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phoneno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyURL)
        </td>
        <td>
            <img height="50" width="100" src="@Html.DisplayFor(modelItem => item.Logo)" />
          <!--  Html.DisplayFor(modelItem => item.Logo) -->
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacebookURL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CompanyId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CompanyId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CompanyId }) |
            <a href="@Url.Action("Create", "Recruit",new { id=item.CompanyId }) ">ReqLFA</a>
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Back to List", "Index")</p>